generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Local {
  id         String  @db.Uuid() @id(map: "pk_locais") @default(uuid())
  capacidade Int
  CEP        String @db.VarChar(8)
  logradouro String @db.VarChar(50)
  numero     Int
  bairro     String @db.VarChar(25)
  cidade     String @db.VarChar(25)
  UF         String @db.VarChar(2)

  @@map("locais")
}

model Horario {
  id         String  @db.Uuid() @id(map: "pk_horarios") @default(uuid())
  hora_inicial DateTime @db.Time
  hora_final DateTime? @db.Time

  @@map("horarios")
}
